@model KiralamaProjesi.ViewModels.ListViewModel
@{
    ViewData["Title"] = "List";
}

<main role="main">

    <section class="jumbotron text-center">
        <div class="container">
            @if (Model.CurrentMarka != null)
            {
                <h1 class="jumbotron-heading">@Model.CurrentMarka.Ad Modelleri</h1>
            }

        </div>
    </section>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-none d-md-block bg-light sidebar">
                <div class="sidebar-sticky">
                    <ul class="nav flex-column">
                        @foreach (var item in Model.Markalar)
                        {

                            if (Model.CurrentMarka != null && item.Id == Model.CurrentMarka.Id)
                            {
                                <li style="background-color:gray;" class="nav-item active">
                                    <a title="@item.Description" style="color:white;" class="nav-link active" asp-action="List" asp-route-id="@item.Id">
                                        <span data-feather="home"></span>
                                        @item.Ad<span class="sr-only">(current)</span>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-action="List" asp-route-id="@item.Id">
                                        <span data-feather="home"></span>
                                        @item.Ad<span class="sr-only">(current)</span>
                                    </a>
                                </li>
                            }

                        }

                    </ul>



                </div>
            </nav>
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">

                <div class="album py-5 bg-light">
                    <div class="container">

                        <div class="row">
                            @foreach (var item in Model.Arabalar)
                            {
                                <div class="col-md-6">
                                    <div class="card mb-4 shadow-sm">
                                        <div style="width:100%;height:350px;">
                                            <img class="card-img-top" src="~/lib/images/@item.Picture" alt="BMW 320i" >
                                        </div>
                                        <div class="card-body">
                                            <h4 class="card-text text-center">@item.Marka.Ad @item.Ad</h4>
                                            <ul>
                                                <li><img src="https://img.icons8.com/ios-filled/50/000000/car-seat.png" height="20" width="20" /><span style="font-weight:bold;">Kişi Sayısı : </span>@item.KisiSayisi</li>
                                                <li><img src="https://img.icons8.com/cotton/64/000000/luggage.png" height="20" width="20" /><span style="font-weight:bold;">Bagaj Kapasaitesi: </span>@item.Bagaj</li>
                                                <li><img src="https://img.icons8.com/material-sharp/24/000000/fuel-gas.png" height="20" width="20" /><span style="font-weight:bold;">Km Sınırı : </span>@item.KmSiniri km/gün</li>
                                                <li><img src="https://img.icons8.com/plasticine/100/000000/20.png" height="20" width="20" /><span style="font-weight:bold;">Yaş Sınırı : </span>@item.YasSiniri Yaş Üstü Sürücüler</li>
                                                <li><img src="https://img.icons8.com/ios-filled/50/000000/car-service.png" height="20" width="20" /><span style="font-weight:bold;">Fren Sistemi : </span>@item.Guvenlik</li>
                                                <li><img src="https://img.icons8.com/ultraviolet/40/000000/turkish-lira.png" height="20" width="20" /><span style="font-weight:bold;">Fiyat : </span>@item.Fiyat TL</li>
                                            </ul>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="btn-group">
                                                    <a class="btn btn-outline-secondary" asp-action="Rezervasyon" asp-route-id="@item.Id">Kirala</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }


                        </div>
                    </div>
                </div>

            </main>
        </div>
    </div>
</main>
